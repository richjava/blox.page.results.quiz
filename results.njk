{% set blox = htmlWebpackPlugin.options.blox %}
{% set title = blox.page.title %}

{% extends "layout/layout.njk" %}

{% block content %}
    <div class="container text-center pt-6 pt-lg-8 pb-8 pb-lg-10">
        <h1 class="h2 brand-post-heading pt-2">Thank you for completing the Burnout Quiz</h1>

        {% for result in blox.db.results.items %}
            <div class="results mw-600 mx-auto text-left pb-6 pt-9" data-lower="{{result.fields.lowerBound}}"
        data-upper="{{result.fields.upperBound}}">
                {{result.fields.feedback | safe}}
            </div>
        {% endfor %}

        <a class="mx-2" href="#">
            <img src="{{ blox.page.path }}assets/images/facebook-icon-dark.svg" alt=""/>
        </a>
        <a class="mx-2" href="#">
            <img src="{{ blox.page.path }}assets/images/youtube-icon-dark.svg" alt=""/>
        </a>

    </div>
{% endblock %}